extends base

block content 
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Avatar
        input(name="avatar", id="avatar", type="file", accept="image/*")
        input(name="name", value=loggedInUser.name, placeholder="Name", type="text", required)
        input(name="email", value=loggedInUser.email, placeholder="Email", type="email", required)
        input(name="username", value=loggedInUser.username, placeholder="Username", type="text", required)
        input(name="location", value=loggedInUser.location, placeholder="Location", type="text", required)
        input(value="Update Profile", type="submit")
        if !loggedInUser.socialOnly
            div.edit-profile__password
            a(href="change-password") Change Password &rarr; 
